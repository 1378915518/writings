<% if @space.errors.empty? %>
  AlertMessage.show({
    type: 'success',
    text: '<%= t('success') %>',
    timeout: 1500
  });
  $("#user-link").attr("href", "http://" + '<%= @space.host %>');
<% else %>
  <% @space.errors.full_messages.each do |message| %>
    AlertMessage.show({ type: 'error', text: "<%= j message %>" });
  <% end %>
<% end %>
