#main
  .container
    .inner
      = render 'dashboard/share/main_header'
      section
        .header.clearfix
          .pull-left
            .button-group
              a.button href='#' class=(action_name == 'index' ? 'button-actived' : nil)
                = t '.open'
              a.button href='#' class=(action_name == 'archived' ? 'button-actived' : nil)
                = t '.archived'
          .pull-right
            a.button.no-margin href=(new_dashboard_topic_path)
              = t '.new_discussion'
        .discussions
          ul
            - @discussions.each do |discussion|
              li.discussion
                - case discussion
                - when Topic
                  a href=(dashboard_topic_path(:id => discussion))
                    .avatar
                      = image_tag discussion.user.gravatar_url(:size => 50)
                    h3
                      = discussion.title
                    .comments-count
                      = discussion.comments.count
                    .info
                      = t '.created_at'
                      = l discussion.created_at, :format => :short
                      = ' â€¢ '
                      = t '.updated_at'
                      = l discussion.updated_at, :format => :short
