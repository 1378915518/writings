$('#note-card-<%= @note.token %>').replaceWith('<%= j render(:partial => 'note', :object => @note) %>');
<% count = @note.article.notes.opening.where(:element_id => @note.element_id).count %>
$('#note-context-<%= @note.element_id %> .notes-count').text('<%= t 'notes_count', :count => count %>');
<% if count == 0 %>
  $('#note-context-<%= @note.element_id %> .note-add-button').removeClass('show');
<% end %>
AlertMessage.remove('ajax-loading');
