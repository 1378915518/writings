#bulkbar.tabs.bulkbar-hide
  .container
    nav#bulkmenu.clearfix data-no-turbolink="true"
      ul.pull-left
        - if params[:status] != 'trash'
          li
            a.edit-button href='#'
              i.icon-edit
              = ' '
              | Edit
          li
            a.move-button href='#move-book-modal' data-toggle='modal'
              i.icon-book
              = ' '
              | Move
        li
          a.publish-button href='#'
            i.icon-file-alt
            = ' '
            | Publish
        li
          a.draft-button href='#'
            i.icon-file
            = ' '
            | Draft
        - if params[:status] == 'trash'
          li
            a.delete-button href='#delete-modal' data-toggle='modal'
              i.icon-remove-sign
              = ' '
              | Delete Selected
          li
            a.delete-button href='#empty-trash-modal' data-toggle='modal'
              i.icon-trash
              = ' '
              | Empty Trash
        - else
          li
            a.trash-button href='#'
              i.icon-trash
              = ' '
              | Trash
      ul.pull-right
        li
          .label
            = "Selected "
            span.selected-count 10
            = " items"
        li
          a.cancel-button href='#'
            i.icon-remove
