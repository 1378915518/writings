- content_for :top_nav do
  li= link_to @book.name, @book

#mainarea
  .container
    #main
      = render 'main_nav'
      #main-content
        header.clearfix
          .pull-left
            input type="search" placeholder="Filter"
          .pull-right
            = link_to '' do
              i.icon-plus-sign
              = ' '
              = link_to 'New Article', new_book_article_path(@book)
        table.articles
          tbody
            - @articles.each do |article|
              tr
                td.article-title
                  = link_to article.title, article
                td.article-date
                  = Date.today
