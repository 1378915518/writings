- append_title '文章'

#tabs
  .button-group
    a.button href=(url_for(:tab => nil)) class=(params[:tab].nil? ? 'button-actived' : nil)
      = "全部 #{User.count}"
    - %w(free base).each do |plan|
      a.button href=(url_for(:tab => plan)) class=(params[:tab] == plan ? 'button-actived' : nil)
        = "#{plan} #{User.in_plan(plan).count}"

table.item-table
  tbody
    tr
      th 用户名
      th 邮箱
      th 全名
      th.min 套餐
      th.min 注册日期
    - @users.each do |user|
      tr
        td = link_to user.name, admin_user_path(user)
        td = user.email
        td = user.full_name
        td.min = user.plan
        td.min = user.created_at.to_s :db

= paginate @users, :theme => :dashboard
