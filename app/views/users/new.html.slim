- append_title APP_CONFIG['site_name']
- append_title t('.signup')

#main
  .container
    .signup
      = form_for @user, :validate => true do |f|
        .field
          = f.label :name
          = f.text_field :name
        .field
          = f.label :email
          = f.text_field :email
        .field
          = f.label :password
          = f.password_field :password
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation
        .field
          = f.submit t('submit'), :class => 'button-primary'
