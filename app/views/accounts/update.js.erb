<% if current_user.errors.empty? %>
  AlertMessage.removeAll();
  AlertMessage.show({ type: 'success', text: '<%= t('success') %>', timeout: 1500 });
  $("#user-link").attr("href", "http://" + '<%= current_user.host %>')
<% else %>
  <% current_user.errors.full_messages.each do |message| %>
    AlertMessage.show({ type: 'error', text: "<%= j message %>" });
  <% end %>
<% end %>
